{% extends 'layout.twig' %}

{% block content %}
<h3>Current Process</h3>
{% if currentProcess %}
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Process</th><th>Version</tg>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{ currentProcess.processName }}</td>
        <td>{{ currentProcess.processVersion }}</td>
      </tr>
    </tbody>
  </table>
{% else %}
  <h5>No process setup currently !</h5>
{% endif %}
<hr>
<h3>Setup current process</h3>
<form action='/processes' method='POST'>
  <div class="form-group">
    <label for="processSelected">Select Process</label>
    <select class="form-control" id="processSelected" name="processSelected">
      {% for process in processOnlyList %}
        <option value={{ process.key }}>{{ process.name }}</option>
      {% endfor %}
    </select>
  </div>
  <div class="form-group">
    <label for="versionSelected">Select Version</label>
    <select class="form-control" id="versionSelected" name="versionSelected">
        <option value='latest'>Latest</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{% endblock %}
