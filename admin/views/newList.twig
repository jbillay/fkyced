{% extends 'layout.twig' %}

{% block content %}
  <h3>New List</h3>
  {% if error %}
  <div class="alert alert-danger" role="alert">
    Issue when we save the list : {{ error }}
  </div>
  {% endif %}
  <form id="listForm" action="/list/save" method="POST">
    <div class="form-group">
      <label for="listName">Name</label>
      <input type="text" class="form-control" id="listName" name="listName" aria-describedby="nameHelp" placeholder="Enter list name">
      <small id="nameHelp" class="form-text text-muted">Define a name for your list. Name needs to be unique.</small>
    </div>
    <div class="form-group">
      <label for="listParentId">Parent List (only for nested list)</label>
      <select class="form-control" id="listParentId" name="listParentId">
        <option></option>
        {% for list in lists %}
          <option value={{ list.id }}>{{ list.name }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group">
      <label for="listValues">Values of the list</label>
      <small id="valuesHelp" class="form-text text-muted">Input one value by line.</small>
      <textarea class="form-control" aria-describedby="nameHelp" id="listValues" name="listValues" rows="6"></textarea>
    </div>
    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="listSorted" name="listSorted">
      <label class="form-check-label" for="listSorted">List sorted by alphabetical order</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
{% endblock %}

{% block script %}
  {{ parent() }}
  <script src="/javascripts/jquery-ui.min.js"></script>
  <script>
    jQuery(function($) {}})
  </script>
{% endblock %}
