{% extends 'layout.twig' %}

{% block content %}
  <p>Object Management</p>
  {% if error %}
  <div class="alert alert-danger" role="alert">
    Issue when we save the field : {{ error }}
  </div>
  {% endif %}

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
    <h2>My Objects</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
          <button class="btn btn-sm btn-outline-secondary">Share</button>
          <button class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead><tr><th>Id</th><th>Label</th><th>Name</th><th>Actions</th></tr></thead>
      <tbody>
        {% for object in objects %}
          <tr>
            <th scope="row"><a href="/object/edit/{{ object.id }}">{{ object.id }}</a></th>
            <td>{{ object.label }}</td>
            <td>{{ object.name }}</td>
            <td>
              <a href="/object/delete/{{ object.id }}"><i class="far fa-trash-alt"></i></a>
              <a href="/object/fields/{{ object.id }}"><i class="fas fa-table"></i></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <a href="/object/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">
    New Object
  </a>


{% endblock %}
